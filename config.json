{
    "data_collection": {
        "keyboard": true,
        "mouse": true,
        "webcam": true,
        "interval": 5,
        "local_processing": true,
        "data_retention_days": 7
    },
    "notifications": {
        "posture_alerts": true,
        "break_reminders": true,
        "focus_time": true
    },
    "analytics": {
        "real_time_processing": true,
        "pattern_recognition": true,
        "machine_learning": true
    },
    "ui": {
        "dashboard": {
            "enabled": true,
            "port": 5000,
            "refresh_rate": 1
        },
        "widgets": {
            "activity_overview": true,
            "posture_analysis": true,
            "focus_metrics": true,
            "break_timer": true
        }
    },
    "privacy": {
        "blur_faces": true,
        "encrypt_data": true,
        "local_storage_only": true
    },
    "system": {
        "data_dir": "activity_data",
        "log_level": "INFO",
        "backup_enabled": true,
        "backup_interval_hours": 24
    },
    "webcam": {
        "recording_interval": 5,
        "snapshot_interval": 30,
        "data_save_interval": 300,
        "output_dir": "webcam_data",
        "max_recording_duration": 60,
        "posture_threshold": 0.7,
        "face_detection_interval": 1
    },
    "hid_system": {
        "data_save_interval": 300,
        "output_dir": "hid_system_data",
        "system_metrics_interval": 1,
        "keyboard_sampling_rate": 0.1,
        "mouse_sampling_rate": 0.1,
        "max_buffer_size": 1000
    }
} 